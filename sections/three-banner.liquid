<section>
    <div class="container-md">
        <div class="row d-flex justify-content-center h-100">

            <div class="col-md-8 mb-3 mb-md-0">
                <a href="{{ section.settings.link_1 }}" class="cusA">
                    <div class="blogHome">
                        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Image 1" draggable="false" class="img-fluid">
                        <div class="BLogBannerHeading d-flex flex-column justify-content-center align-items-start p-2 p-lg-3 p-xl-4">
                            <h2 class="ivy mb-3 mb-lg-4 BLogHomeHead">{{ section.settings.heading_1 }}</h2>
                            <div class="cusA d-inline-block blogButton">{{ section.settings.button_text_1 }}</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <div class="row row d-flex justify-content-center h-100">
                    <div class="col-12 mb-3 mb-md-0">
                        <a href="{{ section.settings.link_2 }}" class="cusA">
                            <div class="blogHome">
                                <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="Image 2" draggable="false" class="img-fluid">
                                <div class="BLogBannerHeading d-flex flex-column justify-content-center align-items-start p-2 p-lg-3 p-xl-4">
                                    <h2 class="ivy mb-3 mb-lg-4 BLogHomeHead">{{ section.settings.heading_2 }}</h2>
                                    <div class="cusA d-inline-block blogButton">{{ section.settings.button_text_2 }}</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="{{ section.settings.link_3 }}" class="cusA">
                            <div class="blogHome">
                                <img src="{{ section.settings.image_3 | img_url: 'master' }}" alt="Image 3" draggable="false" class="img-fluid">
                                <div class="BLogBannerHeading d-flex flex-column justify-content-center align-items-start p-2 p-lg-3 p-xl-4">
                                    <h2 class="ivy mb-3 mb-lg-4 BLogHomeHead">{{ section.settings.heading_3 }}</h2>
                                    <div class="cusA d-inline-block blogButton">{{ section.settings.button_text_3 }}</div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
