{% schema %}
{
  "name": "Three-banner",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1",
      "default": "Lorem ipsum dolor sit amet, consectetur..."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "url",
      "id": "link_1",
      "label": "Link 1"
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button Text 1",
      "default": "Shop Lab-Grown Diamonds"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2",
      "default": "Lorem ipsum dolor sit amet, consectetur..."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "url",
      "id": "link_2",
      "label": "Link 2"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button Text 2",
      "default": "Shop Lab-Grown Diamonds"
    },
    {
      "type": "text",
      "id": "heading_3",
      "label": "Heading 3",
      "default": "Lorem ipsum dolor sit amet, consectetur..."
