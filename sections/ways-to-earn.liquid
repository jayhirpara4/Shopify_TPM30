<div id="reawards_earn_points" class="page-width reawards-earn-points text-center">
       <h2 class="section-title section-header-reverse">{{ section.settings.heading }}</h2>
    <div class="container flex flex-wrap">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'block' -%}
         {%- assign image_picker_2 = block.settings.image_picker_2 -%}
          <div class="col medium-up--one-quarter small--one-half">
                <img loading="lazy" src="{{ image_picker_2 | image_url: width: image_picker_2.width  }}" alt="{{ block.settings.title }}" data-uw-rm-alt-original="" data-uw-rm-alt="CT">
                    <h3 class="section-header-reverse">{{ block.settings.title }}</h3>
                    <p>{{ block.settings.short_description }} </p>
            </div>
          {%- endcase -%}
        {%- endfor -%}
   </div>
</div>


{% schema %}
  {
  "name": "Ways to earn",
  "class": "reawards-earn-points-section",
  "tag": "section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A little about usâ€¦"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "short_description",
          "label": "Short description"
        },
        {
          "type": "image_picker",
          "label": "Image Picker 2",
          "id": "image_picker_2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ways to earn"
    }
  ]
}  
{% endschema %}

