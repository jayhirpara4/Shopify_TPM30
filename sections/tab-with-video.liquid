{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}
<section class="page-width">
    <div class="rs-features-container">
        <div class="rs-feature-left" style="margin-right:40px;">
            {%- if section.settings.heading != blank -%}
                <h3 class="section-header__title" style="margin-bottom: 30px">{{ section.settings.heading }}</h3>
            {%- endif -%}
          {% for block in section.blocks %}
            <div class="faq-drawer">
                <input class="faq-drawer__trigger" id="faq-drawer-{{ block.id }}" type="checkbox" /><label class="faq-drawer__title" for="faq-drawer-{{ block.id }}">{{ block.settings.tabheading }} </label>
                <div class="faq-drawer__content-wrapper">
                  <div class="faq-drawer__content">
                    <p>
                      {{ block.settings.tabdescription }}
                    </p>
                  </div>
                </div>
              </div>
          {% endfor %}
               
        </div>
        <div class="rs-feature-left" style="margin-left:40px;">
          <video playsinline="" preload="none" muted="" id="featuresVideo" data-video-id="features_video" poster="{{ section.settings.videoposterurl }}">
                <source src="{{ section.settings.videourl }}" type="video/mp4">Your browser does not support the video tag.
            </video>
          <div class="video-pre-icon">
              <div class="sprite play-icon" title="Play" id="play" style="display: block;"></div>
              <div class="sprite stop-icon" title="Stop" id="stop" style="display: none;"></div>
          </div>
        </div>
    </div>
</section>
<script>
  $( document ).ready(function($) {
    $('.sprite').click(function() {
      if($(this).hasClass('play-icon')){
        $('#play').hide();
        $('#stop').show();
         $('#featuresVideo').trigger('play');
      }else{
        $('#stop').hide();
        $('#play').show();
        $('#featuresVideo').trigger('pause');
      }
    });
});
</script>
{% schema %}
  {
  "name": "Tabs with video",
  "class": "index-section",
  "max_blocks": 10,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Features"
    },
    {
      "type": "url",
      "label": "Video url",
      "id": "videourl"
    },
    {
      "type": "url",
      "label": "Video poster",
      "id": "videoposterurl"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "tabheading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "tabdescription",
          "label": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabs with video"
    }
  ]
}  
{% endschema %}

