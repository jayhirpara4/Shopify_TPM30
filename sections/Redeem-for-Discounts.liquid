{%- assign image = section.settings.image -%}
<div class="page-width rewards-redeem-discounts">
    <div class="wrapper flex-md align-items_center">
        <div class="col-media">  
            <div class="absolute-image-wrapper" style="padding-top:89.89690721649485%;">
              <img loading="lazy" id="TextColumnImage-template--22356074823963__page-redeem-discounts" class="absolute-image lazyautosizes ls-is-cached lazyloaded" src="{{ image | image_url: width: image.width  }}" >
            </div>
        </div>
        <div class="col-content small--text-center">
              <h2>{{ section.settings.heading }} </h2>
              <p>{{ section.settings.description }} </p>
           <div class="points-wrapper small--text-left">
                <ul class="flex">
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}

                      {%- when 'block' -%}
                       <li data-uw-rm-sr="">
                          <h3 class="section-header-reverse" data-uw-rm-sr="">{{ block.settings.title }} </h3>
                          <p>{{ block.settings.short_description }}</p>
                       </li>  
                      {%- endcase -%}
                    {%- endfor -%}
                </ul>
            </div>
        </div>
    </div>
</div>


