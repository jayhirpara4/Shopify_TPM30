<style>
.page-container[class*=page-the-luxi] .main-content, .page-container[class*=page-the-reserve] .main-content {
    background: #fcf9f5;
}
body.template-page .page-container[class*=page-the-luxi],
body.template-page .page-container[class*=page-the-reserve] 
{padding-top: 0;}
.page-container[class*=page-the-luxi] .main-content,.page-container[class*=page-the-reserve] .main-content {
    background: #FCF9F5;
}
.page-container[class*=page-the-luxi] .main-content .shopify-section,
.page-container[class*=page-the-reserve] .main-content .shopify-section{
    margin-bottom: 0;
}
.page-container[class*=page-the-luxi] .site-footer,
.page-container[class*=page-the-reserve] .site-footer {
    margin-top: 0;
}

/* Page content */
.luxe-page-info {
    max-width: 900px;
    margin: 0 auto;
}
.luxe-page-info p {
    font-family: var(--font-stack-header);
    color: #213245;
    font-size: 22px;
    line-height: 35px;
    font-style: italic;
}
.container .col-media {
    position: relative;
    z-index: 0;
}
@media (min-width: 750px) {}
@media (max-width: 749px) {
    .luxe-page-info {max-width: 353px; width: calc(100% - 40px);}
    .luxe-page-info p {
        font-size: 18px;
        line-height: 31.5px;
    }
    .luxe-page-info p br {display: none;}
}
.luxe-page-content-section {padding: 60px 0 83px;}
.luxe-page-content .container {
    background: #FFF;
    max-width: 1175px;
    padding: 55px 112.5px 83px;
    margin: 0 auto;
}
.luxe-page-content .col:not(:last-child) {margin-bottom: 40px;}
.luxe-page-content .col-title {
    color: #213245;
    font-size: 55px;
    font-weight: 500;
    font-style: italic;
    letter-spacing: 0;
    line-height: 74px;
    margin-bottom: 42px;
}
.luxe-page-content h3 {
    color: #323C50;
    font-size: 24px;
    font-weight: 700;
    line-height: 1;
    font-style: italic;
    letter-spacing: 2.4px;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 1;
    background: #FFF;
    padding: 15px 20px 0 0;
}
.luxe-page-content .col-content {margin-top: 11px;}
.luxe-page-content .col-content p {
    font-family: var(--font-stack-header);
    color: #213245;
    font-size: 20px;
    line-height: 27px;
    font-style: italic;
}
.luxe-page-content .col-link {
    color: #213245;
    font-size: 18px;
    font-weight: 700;
    line-height: 25px;
    letter-spacing: 2.7px;
    text-decoration: underline;
}
.luxe-page-content .col:nth-child(2n) h3 {
    left: auto;
    right: 0;
    padding: 15px 0 0 20px;
}
.luxe-page-content .col:nth-child(2n) .col-content {text-align: right;}
@media (min-width: 750px) {
    .luxe-page-content .luxe-page-info + .container {margin-top: 60px;}
}
@media (max-width: 749px) {
    .luxe-page-content-section {padding: 30px 0 36px;}
    .luxe-page-content .container {
        max-width: calc(100% - 60px);
        padding: 25px 12px 38px;
    }
    .luxe-page-content .col:not(:last-child) {margin-bottom: 35px;}
    .luxe-page-content .col-title {
        font-size: 30px;
        line-height: 40px;
        margin-bottom: 15px;
    }
    .luxe-page-content h3 {
        font-size: 15px;
        line-height: 15px;
        letter-spacing: 1.5px;
        padding: 10px 15px 0 0;
    }
    .luxe-page-content .col-content {margin-top: 13px;}
    .luxe-page-content .col-content p {
        font-family: var(--font-stack-body);
        font-size: 15px;
        font-weight: 300;
        line-height: 1.3;
        font-style: normal;
        margin-bottom: 4px;
    }
    .luxe-page-content .col-link {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 1.8px;
    }
}
@media (max-width: 360px) {
    .luxe-page-content h3 {font-size: 14px;}
}

/*===== Reserve collection =====*/
.page-reserve .luxe-page-content-section {padding-top: 80px;}
@media (max-width: 749px) {
    .page-reserve .luxe-page-content-section {padding-top: 60px;}
}
</style>
  <div class="luxe-page-content" style="position:relative;">
      <div class="luxe-page-info text-center small--hide">{{ section.settings.description }}</div>
      <div class="container">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'collection' -%}
            {%- assign collection_image = block.settings.collection_image -%}
            <div class="col">
                <h2 class="col-title text-center">{{ block.settings.heading }}</h2>
                <div class="col-media">
                    <div class="image-wrapper absolute-image-wrapper " style="padding-top:62.10526315789474%;">
                        {{ collection_image | image_url: width: collection_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
                    </div>
                    <h3>{{ block.settings.collection_title }}</h3>
                </div>
                <div class="col-content">
                    <p>{{ block.settings.description }}</p>
                  {% if block.settings.link_url != blank %}
                    <a title="EXPLORE MAJESTIC" href="{{ block.settings.link_url }}" class="col-link" >{{ block.settings.link_title }} </a>
                  {% endif %}
                </div>
            </div>
          {%- endcase -%}
        {%- endfor -%}
          
      </div>
  </div>


{% schema %}
  {
  "name": "Luxi Collection",
  "class": "luxe-page-content-section",
  "max_blocks": 8,
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "name": "Collection",
      "type": "collection",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection image"
        },
        {
          "type": "text",
          "id": "collection_title",
          "label": "Collection title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_title",
          "label": "Link title"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Luxi Collection"
    }
  ]
}  
{% endschema %}

