     <script>
document.getElementById("contactForm").addEventListener("submit", function(event) {
    event.preventDefault();

    // Show loader and disable button
    // document.getElementById("loader").style.display = "block";
    document.getElementById("submitBtn").disabled = true;
    document.getElementById("submitBtn").innerText = "Sending...";

    let formData = {
        name: document.getElementById("name").value,
        email: document.getElementById("email").value,
        phone: document.getElementById("phone").value,
        message: document.getElementById("message").value
    };

    fetch("https://blog-backend-side-4loa.onrender.com/api/auth/send-email", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(formData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Hide loader, reset form, show success popup
            // document.getElementById("loader").style.display = "none";
            document.getElementById("submitBtn").disabled = false;
            document.getElementById("submitBtn").innerText = "Send Message";
            document.getElementById("contactForm").reset();
            document.getElementById("successPopup").classList.add("active");
        } else {
            alert("Failed to send email. Please try again.");
        }
    })
    .catch(error => {
        alert("Error: " + error.message);
    });
});

// Close popup function
function closePopup() {
    document.getElementById("successPopup").classList.remove("active");
}
</script>                         

