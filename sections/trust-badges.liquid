{% comment %}
  Trust Badges Section with Tooltip (supports blocks)
{% endcomment %}

<style>
  .trust-badge-container {
    display: flex;
    flex-direction: column;
    max-width: 100%;
  }
  .trust-badge-item {
    position: relative;
    font-weight: bold;
    font-size: 16px;
    padding: 8px 0;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }
  .trust-badge-tooltip {
    display: none;
    position: absolute;
    top: -100%;
    left: 0;
    transform: translateY(-12px);
    color: #000;
    padding: 8px 10px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 13px;
    z-index: 9999;
    white-space: normal;
    min-width: 220px;
    max-width: 320px;
    background-color: #fff;
    box-shadow: rgba(0, 0, 0, 0.21) 0px 3px 6px 1px;
    line-height: 1.4;
  }
  .trust-badge-tooltip::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 20px;
    border-width: 6px;
    border-style: solid;
    border-color: #fff transparent transparent transparent;
    filter: drop-shadow(0 -1px 1px rgba(0,0,0,0.08));
  }
  .trust-badge-item.active .trust-badge-tooltip {
    display: block;
  }
  .tooltip-top::after {
    top: 100%;
    border-color: #fff transparent transparent transparent;
    filter: drop-shadow(0 -1px 1px rgba(0,0,0,0.1));
  }
  .tooltip-bottom {
    top: 110%;
  }
  .tooltip-bottom::after {
    bottom: 100%;
    border-color: transparent transparent #fff transparent;
    filter: drop-shadow(0 1px 1px rgba(0,0,0,0.1));
  }
  @media (max-width: 480px) {
    .trust-badge-item {
      font-size: 15px;
      padding: 10px 12px;
    }
    .trust-badge-tooltip {
      font-size: 13px;
      max-width: 90vw;
    }
  }
</style>

<div class="trust-badge-container">
  {% for block in section.blocks %}
    <div class="trust-badge-item" onclick="toggleTooltip(this)">
      {{ block.settings.badge_icon | escape }} {{ block.settings.badge_text }}
      <div class="trust-badge-tooltip">{{ block.settings.tooltip_text }}</div>
    </div>
  {% endfor %}
</div>

<script>
  function toggleTooltip(el) {
    document.querySelectorAll('.trust-badge-item').forEach(item => {
      if (item !== el) {
        item.classList.remove('active');
        const tip = item.querySelector('.trust-badge-tooltip');
        tip?.classList.remove('tooltip-top', 'tooltip-bottom');
      }
    });

    el.classList.toggle('active');

    const tooltip = el.querySelector('.trust-badge-tooltip');
    if (!tooltip) return;

    const rect = el.getBoundingClientRect();
    const spaceTop = rect.top;
    const spaceBottom = window.innerHeight - rect.bottom;

    if (spaceTop > tooltip.offsetHeight + 20) {
      tooltip.classList.add('tooltip-top');
      tooltip.classList.remove('tooltip-bottom');
    } else {
      tooltip.classList.add('tooltip-bottom');
      tooltip.classList.remove('tooltip-top');
    }
  }

  document.addEventListener('click', function (e) {
    if (!e.target.closest('.trust-badge-item')) {
      document.querySelectorAll('.trust-badge-item').forEach(item => {
        item.classList.remove('active');
        const tip = item.querySelector('.trust-badge-tooltip');
        tip?.classList.remove('tooltip-top', 'tooltip-bottom');
      });
    }
  });
</script>

