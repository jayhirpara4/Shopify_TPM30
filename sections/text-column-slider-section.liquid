.slick-prev, .slick-next {
    position: absolute;
    display: block;
    height: 14px;
    width: 14px;
    line-height: 0px;
    font-size: 0px;
    cursor: pointer;
    background: transparent;
    color: transparent;
    top: 50%;
    -webkit-transform: translate(0, -50%);
    -ms-transform: translate(0, -50%);
    transform: translateY(-50%);
    padding: 0;
    border: none;
    z-index: 2;
}
.slick-slider .slick-prev, .slick-slider .slick-next {
    background: url(https://cdn.shopify.com/s/files/1/0599/0839/0973/files/arrow_slider.svg?v=1717434020) no-repeat;
    width: 40px;
    height: 40px;
}
</style>
<div class="page-width sm-pd-0">
    <div class="slider-wrapper text-center">

        <p class="sub-title">{{ section.settings.heading }}</p>
        <h2 class="section-header">{{ section.settings.sub_heading }} </h2>
        <p>{{ section.settings.description | newline_to_br }}</p>

        <div class="text-columns-slider">
          {%- for block in section.blocks -%}
            <div class="block flex-md">
                <div class="medium-up--one-half block-title flex-md justify-content_center align-items_center">
                    <h3 class="section-header section-header-reverse">{{ block.settings.heading }} </h3>
                </div>
                <div class="medium-up--one-half block-content flex-md align-items_center">
                    <div class="content">
                        <p>{{ block.settings.description | newline_to_br }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
            
        </div>
    </div>
</div>
<script>
 let textColumnSlider = $(".text-columns-slider");
 textColumnSlider.length && textColumnSlider.slick({ slidesToShow: 1, slidesToScroll: 1, dots: !1, arrows: !0 });
</script>

