    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "FINDING THE BEST RING SIZE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Are you planning a surprise proposal or ring gift? There are a few ways to find ring size without spoiling the sweet gesture."
    }
  ],
  "blocks": [
    {
      "name": "Slides",
      "type": "slides",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Slider"
    }
  ]
}  
{% endschema %}

