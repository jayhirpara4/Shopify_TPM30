  "name": "Text Slider",
  "class": "text-columns-slider-section",
  "max_blocks": 8,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DELIBERATELY DIFFERENT NO. 3"
