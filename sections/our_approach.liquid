                                      width="50"
                                      height="50"
                                      loading="lazy"
                                      alt="Collaborative icon"
                                      draggable="false"
                                      class="img-fluid"
                                      src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Collaborative.svg?v=1732279234">
                                {%- endif -%}
                            </div>
                            <h2 class="ivy BLogHomeHead text-white mt-3 mb-1">{{ section.settings.heading_2 }}</h2>
                            <div class="text-center text-white hvrDescription" style="color: {{ section.settings.description_color }}">{{ section.settings.description_2 }}</div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3 mb-md-0 OurApproachHvrMain">
                    <div class="blogHome Crafted">
                        {%- if section.settings.Image_3 != blank -%}
                            <img
                              width="800"
                              height="800"
                              loading="lazy"
                              alt="Image of Crafted"
                              draggable="false"
                              class="img-fluid"
                              src="{{ section.settings.Image_3 | image_url }}">
