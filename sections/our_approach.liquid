<section class="mrg_tb">
    <div class="container">

        <div class="d-flex flex-column justify-content-center align-items-center mb-4">
            <h2 class="heading" style="padding-bottom: 10px;">{{ section.settings.main_heading }}</h2>
            <div class="subHeading">{{ section.settings.main_description }}</div>
        </div>

        <div class="row d-flex justify-content-center h-100">

            <div class="col-md-4 mb-3 mb-md-0 OurApproachHvrMain cusTransition">
                    <div class="blogHome Customizable cusTransition">
                        {%- if section.settings.Image_1 != blank -%}
                            <img
                              width="800"
                              height="800"
                              loading="lazy"
                              alt="Image of Customizable"
                              draggable="false"
                              class="img-fluid cusTransition"
                              src="{{ section.settings.Image_1 | image_url }}">
                          {%- else -%}
                            <img
                              width="800"
                              height="800"
                              loading="lazy"
                              alt="Image of Customizable"
                              draggable="false"
                              class="img-fluid cusTransition"
                              src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Customizable.png?v=1732279236">
                        {%- endif -%}
                        <div class="BLogBannerHeading d-flex flex-column justify-content-center align-items-center p-2 p-lg-3 p-xl-4 AUSApprochHvr cusTransition">
                            <div class="ServIconBG hvrIcon CustomizableIcon">
                                {%- if section.settings.Image_1_1 != blank -%}
                                    <img
                                      width="50"
                                      height="50"
                                      loading="lazy"
                                      alt="Customizable icon"
                                      draggable="false"
                                      class="img-fluid"
                                      src="{{ section.settings.Image_1_1 | image_url }}">
                                  {%- else -%}
                                    <img
                                      width="50"
                                      height="50"
                                      loading="lazy"
                                      alt="Customizable icon"
                                      draggable="false"
                                      class="img-fluid"
                                      src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Customizable.svg?v=1732279235">
                                {%- endif -%}
                            </div>
                            <h2 class="ivy BLogHomeHead text-white cusTransition mt-3 mb-1">{{ section.settings.heading_1 }}</h2>
                            <div class="text-center text-white hvrDescription" style="color: {{ section.settings.description_color }}">{{ section.settings.description_1 }}</div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3 mb-md-0 OurApproachHvrMain">
                    <div class="blogHome Collaborative">
                        {%- if section.settings.Image_2 != blank -%}
                            <img
                              width="800"
                              height="800"
                              loading="lazy"
                              alt="Image of Collaborative"
                              draggable="false"
                              class="img-fluid"
                              src="{{ section.settings.Image_2 | image_url }}">
