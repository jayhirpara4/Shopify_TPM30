                              width="800"
                              height="800"
                              loading="lazy"
                              alt="Image of Collaborative"
                              draggable="false"
                              class="img-fluid"
                              src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Collaborative.png?v=1732279238">
                        {%- endif -%}
                        <div class="BLogBannerHeading d-flex flex-column justify-content-center align-items-center p-2 p-lg-3 p-xl-4 AUSApprochHvr">
                            <div class="ServIconBG hvrIcon CollaborativeIcon">
                                {%- if section.settings.Image_1_2 != blank -%}
                                    <img
                                      width="50"
                                      height="50"
                                      loading="lazy"
                                      alt="Collaborative icon"
                                      draggable="false"
                                      class="img-fluid"
                                      src="{{ section.settings.Image_1_2 | image_url }}">
                                  {%- else -%}
