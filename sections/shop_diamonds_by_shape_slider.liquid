  <script>
    $(document).ready(function () {
      $('.DiamondSLider').owlCarousel({
        loop: false,
        nav: false,
        margin: 10,
        autoplay: true,
        autoplayTimeout: 5000,
        autoplaySpeed: 2000,
        responsive: {
          0: {
            items: 4,
          },
          600: {
            items: 6,
          },
          1000: {
            items: 10,
          },
        },
      });
      // Wait for Owl Carousel to initialize
      $('.DiamondSLider').on('initialized.owl.carousel refreshed.owl.carousel', function (event) {
        const dotCount = $(this).find('.owl-dot').length;
    
        $(this).find('.owl-dot').each(function (index) {
          $(this)
            .attr('aria-label', 'Go to slide ' + (index + 1))
            .attr('title', 'Go to slide ' + (index + 1))
            .attr('role', 'button');
    
          // Optional: Highlight current dot for screen readers
          if ($(this).hasClass('active')) {
            $(this).attr('aria-current', 'true');
          } else {
            $(this).removeAttr('aria-current');
          }
        });
      });

