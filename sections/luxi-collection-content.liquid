  "name": "Luxi Collection Content",
  "class": "luxe-collection-content-section",
  "max_blocks": 20,
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "name": "Collection",
      "type": "collection",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection image"
        },
        {
          "type": "text",
          "id": "collection_title",
          "label": "Collection title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "size",
          "label": "Carat"
        },
        {
          "type": "text",
          "id": "weight_upper",
          "label": "Carat (Upper)"
        },
        {
          "type": "text",
          "id": "weight_lower",
          "label": "Carat (Lower)"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Luxi Collection Content"
    }
  ]
}  
{% endschema %}

