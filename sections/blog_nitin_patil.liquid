                    function nextPage() {
                        if (currentPage * postsPerPage < filteredPosts.length) {
                            currentPage++;
                            renderPosts();
                        }
                    }

                    // Function to handle "Previous" button click
                    function previousPage() {
                        if (currentPage > 1) {
                            currentPage--;
                            renderPosts();
                        }
                    }

