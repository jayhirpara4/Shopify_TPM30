                    let currentPage = 1; // Start from the first page
                    const postsPerPage = 6; // Number of posts per page

                    // Function to render posts for the current page
                    function renderPosts() {
                        // Calculate the start and end index of posts for the current page
                        const startIndex = (currentPage - 1) * postsPerPage;
                        const endIndex = startIndex + postsPerPage;

                        // Get the posts for the current page
                        const visiblePosts = filteredPosts.slice(startIndex, endIndex);

                        // Clear the previous posts
                        const authorBlogData = document.getElementById('author_post_data');
                        authorBlogData.innerHTML = ""; // Clear previous content

