{%- assign desktop_image = section.settings.desktop_image -%}
{%- assign mobile_image = section.settings.mobile_image -%}
<div id="reawards_member_tiers" class="page-width sm-pd-0 rewards-member-tiers">
    <div class="wrapper flex-md align-items_center">
        <div class="col-media">
                <div class="small--hide">
                    <div class="absolute-image-wrapper" style="padding-top:100.63897763578272%;">
                      <img loading="lazy" id="TextColumnImage-template--22356074823963__page-member-tiers" class="absolute-image lazyautosizes lazyloaded" src="{{ desktop_image | image_url: width: image.width }}" >
                    </div>
                </div>
                <div class="medium-up--hide">
                    <div class="absolute-image-wrapper" style="padding-top:56.00961538461539%;" >
                      <img loading="lazy" id="TextColumnImage-template--22356074823963__page-member-tiers" class="absolute-image lazyload" src="{{ mobile_image | image_url: width: image.width }}" >
                    </div>
                </div>
        </div>
        <div class="col-content small--text-center">
              <h2 class="section-title section-header-reverse">{{ section.settings.heading }} </h2>
            <div class="tiers-wrapper">
                <ul class="flex-md">
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}
                  
                      {%- when 'block' -%}
                      <li class="medium-up--one-third">
                                <h3>{{ block.settings.heading }}</h3>
                                <span class="sub-title">{{ block.settings.subheading }}</span>
                                <p data-uw-rm-sr="">{{ block.settings.short_description }}</p>
                        </li>
                        {%- endcase -%}
                      {%- endfor -%}
                </ul>
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
  "name": "Members Tiers",
  "class": "rewards-member-tiers-section",
  "max_blocks": 3,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A little about usâ€¦"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "textarea",
          "id": "short_description",
          "label": "Short description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Members Tiers"
    }
  ]
}  
{% endschema %}

