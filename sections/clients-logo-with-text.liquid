{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}
<section class="page-width">
    <div class="publish-logo-wrapper">
        <h3 class="section-header__title">{{ section.settings.heading }} </h3>
        <div class="rs-logo-wrapper">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
            
                {%- when 'block' -%}
                <div class="rs-logo-container rschangetext" data-text="{{ block.settings.description }}">
                    {%- assign logo = block.settings.logo -%}
                    {{ logo | image_url: width: logo.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
                </div>
              {%- endcase -%}
            {%- endfor -%}
        </div>
        <p class="logo-desc logotxtd"></p>
    </div>
</section>

{% schema %}
  {
  "name": "Clients logo with text",
  "class": "index-section",
  "max_blocks": 5,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We're the talk of the town"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "logo"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clients logo with text"
    }
  ]
}  
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}

  $(".rschangetext").mouseenter(function() {
      var dtxt = $(this).attr('data-text');
      $('.logotxtd').text(dtxt);
  }).mouseleave(function() {
      $('.logotxtd').text('');
  });
  
{% endjavascript %}