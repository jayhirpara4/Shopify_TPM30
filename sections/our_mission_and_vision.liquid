{%- assign Our_Mission_Image = section.settings.Our_Mission_Image -%}
{%- assign Our_Vision_Image = section.settings.Our_Vision_Image -%}

<section>
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6 order-1 order-md-0 d-flex flex-column justify-content-center align-items-center padVisMis my-5">
                <h2 class="heading text-center" style="padding-bottom: 10px;">{{ section.settings.heading_1 }}</h2>
                <div class="cusContent mt-2 text-center">{{ section.settings.description_1 }}</div>
            </div>
            <div class="col-md-6 order-0 order-md-1 px-0">
              {%- if section.settings.Our_Mission_Image != blank -%}
                <img
                    width="1200"
                    height="1200"
                    loading="lazy"
                    alt="Our Mission"
                    draggable="false"
                    class="img-fluid"
                  src="{{ section.settings.Our_Mission_Image | image_url }}">
              {%- else -%}
                <img
                width="1200"
                      height="1200"
                  loading="lazy"
                  alt="Our Mission"
                  draggable="false"
                  class="img-fluid"
                  src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Our_Mission.png?v=1732273291">
            {%- endif -%}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 px-0">
              {%- if section.settings.Our_Vision_Image != blank -%}
                <img
                width="1200"
                      height="1200"
                    loading="lazy"
                    alt="Our Vision"
                    draggable="false"
                    class="img-fluid"
                  src="{{ section.settings.Our_Vision_Image | image_url }}">
              {%- else -%}
                <img
                width="1200"
                      height="1200"
                  loading="lazy"
                  alt="Our Vision"
                  draggable="false"
                  class="img-fluid"
                  src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Our_Vision.png?v=1732273293">
            {%- endif -%}
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center padVisMis my-5">
                <h2 class="heading text-center" style="padding-bottom: 10px;">{{ section.settings.heading_2 }}</h2>
                <div class="cusContent mt-2 text-center">{{ section.settings.description_2 }}</div>
            </div>
        </div>
        
    </div>
</section>

 
{% schema %}
  {
  "name": "Our Mission and Vision",
  "class": "video-with-content-section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1",
      "default": "A clear purpose."
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2",
      "default": "A clear purpose."
    },
    {
      "type": "richtext",
      "id": "description_1",
      "label": "Description 1"
    },
    {
      "type": "richtext",
      "id": "description_2",
      "label": "Description 2"
    },
    {
      "type": "image_picker",
      "id": "Our_Mission_Image",
      "label": "Our Mission Image"
    },
    {
      "type": "image_picker",
      "id": "Our_Vision_Image",
      "label": "Our Vision Image"
    }
  ],
  "presets": [
    {
      "name": "Our Mission and Vision"
    }
  ]
}  
{% endschema %}
