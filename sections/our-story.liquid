{%- assign display_image = section.settings.display_image -%}

<section class="mrg_b">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-6 col-xl-5 px-xl-5 d-flex justify-content-center align-items-center">
                {%- if section.settings.display_image != blank -%}
                    <img
                        width="600"
                        height="600"
                        loading="lazy"
                        alt="Our Stoy Images"
                        draggable="false"
                        class="img-fluid"
                      src="{{ section.settings.display_image | image_url }}">
                  {%- else -%}
                    <img
                      width="600"
                      height="600"
                      loading="lazy"
                      alt="Our Stoy Images"
                      draggable="false"
                      class="img-fluid"
                      src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/Our_Story_Images.png?v=1732272734">
                {%- endif -%}    
            {% comment %} <img src="./Images/AboutUs/OurStoyImages.png" alt="Our Stoy Images" draggable="false" class="img-fluid"> {% endcomment %}
            </div>
            <div class="col-lg-6 col-xl-7 d-flex flex-column justify-content-center align-items-start mt-4 mt-lg-0">
                <h2 class="heading text-start" style="padding-bottom: 10px;">{{ section.settings.heading }}</h2>
                <div class="cusContent mt-2">{{ section.settings.description }}</div>
            </div>
        </div>
    </div>
</section>

{% comment %} <div class="page-width sm-pd-0">
    <div class="video-with-content flex flex-wrap align-items_center a-clear-purpose">
        <div class="video-box medium-up--one-half small--one-whole  align-right"><div class="video-wrapper" style="padding-top:56.25%;">
                
                <video playsinline="" preload="none" muted="" id="technologyVideo" data-video-id="technology_video" poster="{{ display_image | image_url: width: display_image.width }}" >
                    <source src="{{ section.settings.video_url }} " type="video/mp4">Your browser does not support the video tag.
                </video>
                <div class="video-pre-icon">
                    <div class="sprite play-icon" title="Play" id="play" style="display: block;"></div>
                    <div class="sprite stop-icon" title="Stop" id="stop" style="display: none;"></div>
                </div>
            </div>
        </div>
        <div class="grid__content medium-up--one-half small--text-center">         
                <h2 class="section-header-lg">{{ section.settings.heading }} </h2>        
                <div class="content"><p>{{ section.settings.description }} </p></div>
          <div class="btn-wrapper"></div>
        </div>
    </div>
</div> {% endcomment %}
 
{% schema %}
  {
  "name": "Our Story",
  "class": "video-with-content-section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A clear purpose."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "display_image",
      "label": "Our Story Images"
    }
  ],
  "presets": [
    {
      "name": "Our Story"
    }
  ]
}  
{% endschema %}
