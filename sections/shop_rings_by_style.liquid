        href="{{ section.settings.card_url_1 }}"
        class="cusA d-flex flex-column justify-content-center align-items-center ringStyleHvr cusTransition"
      >
        {%- if section.settings.image_1 != blank -%}
          <img
            width="500"
            height="500"
            loading="lazy"
            alt="Three Stone Diamond Engagement Rings"
            draggable="false"
            class="img-fluid"
            src="{{ section.settings.image_1 | image_url }}"
          >
        {%- else -%}
          <img
            width="500"
            height="500"
            loading="lazy"
            alt="Three Stone Diamond Engagement Rings"
            draggable="false"
            class="img-fluid"
            src="https://cdn.shopify.com/s/files/1/0708/5876/8690/files/three_stoneshop_rings_by_style.png?v=1728654948"
          >
        {%- endif -%}

