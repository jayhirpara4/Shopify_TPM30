{% comment %}
  Footer Section for Shopify
  Adjusted to match new Figma design: newsletter at the top, bottom icons with dummy placeholders,
  and social SVGs replaced with placeholder images.
{% endcomment %}

{% style %}
  Footer {
      background-color: var(--theme-white);
      padding: 0px 0px;
  }
  .footer-bg {
    background-color: var(--theme-color, #1A3555);
    color: white;
    padding: 60px 0;
  }
  .subFooter {
    background-color: #E7F0FA;
    /*padding: 20px 0;*/
    text-align: center;
  }
  .footer-logo {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 15px;
  }
  .FootHead {
    font-weight: bold;
    margin-bottom: 20px;
    font-size: 14px;
  }
  .footOption {
    color: #fff;
    text-decoration: none;
    display: inline-block;
    margin: 0px 0px;
    margin-bottom: 15px;
    font-size: 12px;
    position: relative;
    font-weight: 400;
  }
  
  .footOption::after {
    content: attr(data-text);
    font-weight: 700;
    visibility: hidden;
    height: 0;
    overflow: hidden;
    display: block;
  }
  
  .footOption:hover {
    font-weight: 600;
  }
  
  .footSocial {
    margin: 0 5px;
    padding-right: 2px;
    padding-left: 2px;
  }
  .text-primary-emphasis{
    color:#113174;
  }
  .font12{
    font-size:12px;
  }
  .inpBtn {
    min-width:120px;
    font-family: 'Montserrat' !important;
    letter-spacing: 0;
  }
  .contact-info {
    text-align: center;
    margin: 20px 0;
    font-size: 14px;
  }
  .contact-info a {
    color: white;
    text-decoration: none;
  }
  .certifications {
    text-align: center;
    margin: 15px 0;
  }
  .certifications img {
    width: 50px;
    margin: 0 10px;
  }
  .bottom-icons {
    text-align: center;
    margin: 20px 0;
  }
  .bottom-icons img {
    width: 40px;
    margin: 0 10px;
  }
  .payment-methods {
    text-align: center;
    margin: 15px 0;
  }
  .payment-methods svg {
    width: 40px;
    height: 25px;
    margin: 0 5px;
  }
  .bottom-links {
    text-align: center;
    margin: 15px 0;
  }
  .bottom-links a {
    color: #1A3555;
    text-decoration: none;
    margin: 0 5px;
  }
  .bottom-links a:hover {
    text-decoration: underline;
  }
  .FootHR {
    border-color: rgba(255, 255, 255, 0.2);
    margin: 0px;
  }
  .cfw-Bold {
    font-weight: bold;
  }
  .f-14 {
    font-size: 14px;
  }

  .footer-links-rows {
      padding-left: 85px;
      margin: 0px;
      padding-right: 0px
  }


  .footerAccordian {
    border-bottom: 0px !important;
  }
  .footerAccordianBTN {
    color: white !important;
    border: none !important;
    font-size: 16px;
    padding: 15px;
  }
  
  .footerAccordian .accordion-body {
    color: white;
    padding: 15px;
  }
  
  .logo-container {
      padding: 20px 0;
      padding-right:-1px;
  }
  .logo-container .row{
    --bs-gutter-x:0;
  }
  .logo-img {
      width: 72px; /* Adjust size as needed */
      height: auto;
      margin: 0 20px 0px 0px; /* Spacing between logos */
  }

  .bottom-footer-sec{
    border-top:1px solid #113174;
    opcity:1;
  }
  .bottom-footer-sec p.copyright{
    color: #113174;
    font-size: 14px;
  }
  .bottom-footer-sec p.copyright a{
    color: #113174;
    font-weight: 600;
  }
  .footer-container {
      padding: 20px 0;
  }
  .footer-links a {
      color: #113174;
      text-decoration: none;
      font-size:14px;
      font-weight:600;
  }
  .footer-links a:not(:last-child)::after {
    content: "|";
    margin: 0 15px;
    color: #000000; /* Optional: match link color */
  }
  .footer-links a:hover {
      text-decoration: none;
  }
  .payment-img {
      width: 27px; /* Adjust size as needed */
      height: auto;
      margin-left: 10px;
      display: inline-block;
  }
  /* Responsive Accordion Styling */
  .responsive-accordion {
    width: 100%;
  }
  .accordion-flush .accordion-item .accordion-button {
      font-weight: 500;
  }
  @media (min-width: 992px) {
    .responsive-accordion {
      display: flex;
      flex-wrap: wrap;
      gap: 98px; /* optional spacing between items */
    }
    
    .responsive-accordion .accordion-item {
      flex: 0 0 auto; /* width based on content */
      max-width: 100%; /* prevent overflow */
      min-width: fit-content; /* Ensures width accommodates full content */
    }
    .responsive-accordion .accordion-header {
      display: none; /* Hide the accordion button on desktop */
    }
    .responsive-accordion .accordion-collapse {
      display: block !important; /* Always expanded on desktop */
    }
    .responsive-accordion .accordion-body {
      padding: 0;
      background: none;
    }
    .responsive-accordion .accordion-body .FootHead {
      display: block; /* Show the heading on desktop */
      margin-bottom: 20px;
    }
  }
  @media (max-width: 991.98px) {
    .responsive-accordion .accordion-body .FootHead {
      display: none; /* Hide the heading in accordion body on mobile, since it's in the button */
    }
    .footer-links-rows {
      padding-left: 40px;
      padding-right: 40px;
    }
    #newfootersec .footerAccordian , #newfootersec .accordion-item:nth-last-child(1) {
        border-bottom: 1px solid var(--theme-footer-HR) !important;
    }
    .mobilepadding{
      padding:18px;
    }
    .centermobiletext{
      text-align:center!important;
    }
    #logo-imgs {
        width: 300px;
        height: auto;
        max-height: 100%;
    }
  }
 @media (min-width: 769px) and (max-width: 1024.98px) {
    .footer-links-rows {
        padding-left: 15px;
        margin: 0px;
        padding-right: 0px;
    }
    .responsive-accordion {
        row-gap: 40px;
    }
  }
  @media (min-width: 992px) {
    .email-signup {
      flex-direction: row;
      justify-content: center;
      max-width: 600px;
    }
    .email-signup input {
      margin-bottom: 0;
      margin-right: 10px;
    }
    .footer-links-row .col-xl-2 {
      flex: 0 0 20%;
      max-width: 20%;
    }
  }

  
{% endstyle %}

<div class="newsleter-sec">
  <div class="subFooter mobilepadding py-4">
    <div class="container">
      <div class="row align-items-center">
        <!-- Text Section -->
        <div class="col-lg-5 centermobiletext text-lg-end text-end  mb-3 mb-lg-0">
            <div class="text-primary-emphasis fs-5 me-2">
              {{ section.settings.text_before }} <span class="fw-bold">{{ section.settings.discount_text }}</span>
            </div>
            <div class="small text-primary-emphasis me-5">
              {{ section.settings.text_after }}
            </div>
        </div>
        <!-- Form Section -->
        <div class="col-lg-7 d-flex justify-content-lg-start justify-content-center">
          {% form 'customer', class: 'd-flex flex-nowrap w-100 justify-content-center justify-content-lg-start', style: 'max-width: 500px;', id: 'newsletter-footerXXXX' %}
            {%- if form.context == 'footer' -%}
              {%- if form.errors -%}
                {{ form.errors | default_errors }}
              {%- endif -%}
            {%- endif -%}
            <input type="hidden" name="contact[tags]" value="prospect,newsletter">
            <input type="hidden" name="contact[context]" value="footer">
            <input
              type="email"
              name="contact[email]"
              placeholder="Enter your email"
              class="form-control font12"
              style="border: none; border-radius: 0;"
              required
            />
            <button type="submit" class="btn text-white px-4 inpBtn font12" style="background-color: #0b1736; border-radius: 0;">
              SUBMIT
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>


            
