<script>
document.addEventListener("DOMContentLoaded", function () {
  // Fix self-closing inputs (not valid in W3C strict if not XHTML)
  document.querySelectorAll('input').forEach(el => {
    // Clone as outerHTML without slash
    let outer = el.outerHTML;
    if (outer.endsWith('/>')) {
      const clean = outer.replace(/\/>/, '>');
      const span = document.createElement('span');
      span.innerHTML = clean;
      el.replaceWith(span.firstChild);
    }
  });
});
</script>



