                         class: 'shopify-localization-form multi-selectors',
                         data-disclosure-form: ''
                       -%}
                       {% comment %} Disclosure Dropdown {% endcomment %}
                         <div class="disclosure" data-disclosure-currency>
                           <button
                             type="button"
                             class="disclosure__button"
                             aria-expanded="false"
                             aria-controls="CountryList"
                             aria-describedby="CountryList"
                             data-disclosure-toggle
                           >
                           {% comment %} Currency Flag and Code Display {% endcomment %}
