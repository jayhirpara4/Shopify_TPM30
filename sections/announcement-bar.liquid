                            {% for country in form.available_countries %}
                              {% if allowed_countries contains country.iso_code and country.iso_code != localization.country.iso_code %}
                                <li class="disclosure__item">
                                  <a
                                    href="#"
                                    data-value="{{ country.iso_code }}"
                                    data-disclosure-option
                                  >
                                    <span
                                      class="currency-flag currency-flag--{{ country.iso_code | downcase }}"
                                      data-flag="{{ country.currency.iso_code }}"
                                      aria-hidden="true"
                                    ></span>
                                    <span>
                                      {%  if country.iso_code =='MX' %}
                                        MXN
                                      {%  else %}
                                        {{ country.currency.iso_code }}
                                      {%  endif %}
                                    </span>
                                  </a>
                                </li>
                              {% endif %}
                            {% endfor %}
                           </ul>
                           {% comment %} Hidden Input {% endcomment %}
                           <input
                             type="hidden"
                             name="country_code"
                             value="{{ localization.country.iso_code }}"
                             data-disclosure-input
                           >
